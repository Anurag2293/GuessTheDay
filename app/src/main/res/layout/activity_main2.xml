<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/gradient_drawable"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/queLoader"
        android:layout_width="409dp"
        android:layout_height="60dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:hint="Date in DD/MM/YY Format"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/opt1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="254dp"
        android:layout_height="62dp"
        android:layout_marginBottom="16dp"
        android:text="BEGIN"
        android:textSize="20sp"
        app:backgroundTint="#9D00FF"
        app:cornerRadius="35dp"
        app:layout_constraintBottom_toTopOf="@+id/queLoader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77" />

    <Button
        android:id="@+id/opt1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:textSize="20sp"
        app:backgroundTint="#33E54B"
        app:layout_constraintBottom_toTopOf="@+id/opt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/opt2"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:text="Good"
        android:textSize="20sp"
        app:backgroundTint="#33E54B"
        app:layout_constraintBottom_toTopOf="@+id/opt3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/opt3"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:text="Luck!"
        android:textSize="20sp"
        app:backgroundTint="#33E54B"
        app:layout_constraintBottom_toTopOf="@+id/opt4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/opt4"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="140dp"
        android:textSize="20sp"
        app:backgroundTint="#33E54B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/display"
        android:layout_width="409dp"
        android:layout_height="81dp"
        android:layout_marginTop="280dp"
        android:gravity="center"
        android:textColor="#F4E10F"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/retry_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/retry_button"
        android:layout_width="254dp"
        android:layout_height="62dp"
        android:layout_marginBottom="232dp"
        android:textSize="20sp"
        android:visibility="invisible"
        app:backgroundTint="#FFEA00"
        app:cornerRadius="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>